{
  "compilerOptions": {
    "declaration": true,
    "noEmit": false,
    "outDir": "./build/node",
    "plugins": [
      {
        "afterDeclarations": true,
        "exclude": ["*"],
        "transform": "@zerollup/ts-transform-paths"
      }
    ],
    "removeComments": false,
    "rootDir": "./src",
    "sourceMap": true
  },
  "exclude": ["**/build", "**/__mocks__", "**/node_modules", "**/__tests__"],
  "extends": "./tsconfig.json",
  "include": ["src"]
}
