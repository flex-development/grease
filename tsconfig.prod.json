{
  "compilerOptions": {
    "declaration": true,
    "noEmit": false,
    "outDir": "./build/node",
    "plugins": [
      {
        "afterDeclarations": true,
        "exclude": ["*"],
        "transform": "@zerollup/ts-transform-paths"
      }
    ],
    "removeComments": false,
    "rootDir": "./src",
    "sourceMap": true
  },
  "exclude": ["**/__mocks__", "**/__tests__", "**/build", "**/node_modules"],
  "extends": "./tsconfig.json",
  "files": [],
  "include": ["src"]
}
